<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        tools:context=".FuelStation.FuelStationAvailability">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="start"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEDAN"
                android:textSize="30dp" />


                <TextView
                    android:id="@+id/sedanCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HATCHBACK"
                android:textSize="30dp" />

                <TextView
                    android:id="@+id/hatchCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="T-WHEEL"
                android:textSize="30dp" />

                <TextView
                    android:id="@+id/twCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUV"
                android:textSize="30dp" />

                <TextView
                    android:id="@+id/suvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    />

                        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VAN/LIGHT LORRY"
                android:textSize="30dp" />

                <TextView
                    android:id="@+id/vanCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    />

                        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUS/HEAVY LORRY"
                android:textSize="30dp" />

                <TextView
                    android:id="@+id/busCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    />

                        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MOTORBIKE"
                android:textSize="30dp" />

                <TextView
                    android:id="@+id/motorbikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/close"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:padding="12dp"
                android:text="Close"
                android:backgroundTint="@color/cancel"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                app:rippleColor="@color/ripple" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>